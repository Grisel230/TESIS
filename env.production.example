# Configuración de Producción
# Copiar este archivo como .env.production y ajustar los valores

# Base de Datos PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=emotion_detection_prod
DB_USER=emotion_app
DB_PASSWORD=secure_password_123
DB_APP_USER=emotion_app
DB_APP_PASSWORD=secure_password_123

# Configuración de la Aplicación
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your_super_secret_key_for_production_change_this
JWT_SECRET_KEY=your_jwt_secret_key_for_production_change_this

# CORS - Dominios permitidos en producción
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Configuración de Modelos
MODEL_PATH=./modelFEC.h5
FACE_DETECTOR_PROTOTXT=./face_detector/deploy.prototxt
FACE_DETECTOR_MODEL=./face_detector/res10_300x300_ssd_iter_140000.caffemodel

# Configuración de Servidor
HOST=0.0.0.0
PORT=5000
WORKERS=4

# Configuración de Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Configuración de Caché
CACHE_TYPE=redis
CACHE_REDIS_URL=redis://localhost:6379/0
CACHE_DEFAULT_TIMEOUT=300

# Configuración de SSL
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem

# Configuración de Monitoreo
MONITORING_ENABLED=True
PROMETHEUS_PORT=9090

# Configuración de Backup
BACKUP_ENABLED=True
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Configuración de Seguridad
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_TIME=900
SESSION_TIMEOUT=3600

# Configuración de Archivos
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif
UPLOAD_FOLDER=uploads

# Configuración de Email (opcional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password

# Configuración de Redis (para caché y sesiones)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# Configuración de Nginx
NGINX_CONFIG_PATH=/etc/nginx/sites-available/emotion-detection
NGINX_LOG_PATH=/var/log/nginx/emotion-detection

# Configuración de PM2
PM2_CONFIG_PATH=ecosystem.config.js
PM2_LOG_PATH=logs/pm2

# Configuración de Docker
DOCKER_IMAGE_NAME=emotion-detection
DOCKER_TAG=latest
DOCKER_REGISTRY=your-registry.com

# Configuración de Health Check
HEALTH_CHECK_ENABLED=True
HEALTH_CHECK_INTERVAL=30

# Configuración de Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Configuración de Compresión
COMPRESSION_ENABLED=True
COMPRESSION_LEVEL=6

# Configuración de CORS Avanzada
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_HEADERS=Content-Type,Authorization,X-Requested-With
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_MAX_AGE=3600
