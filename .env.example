# ============================================
# CONFIGURACIÓN DE LA BASE DE DATOS
# ============================================
DATABASE_URL=postgresql://postgres:123456@localhost:5432/emociones

# ============================================
# CONFIGURACIÓN DE SEGURIDAD
# ============================================
# Genera una nueva clave con: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=tu_clave_secreta_aqui
JWT_SECRET_KEY=tu_clave_jwt_secreta_aqui

# ============================================
# CONFIGURACIÓN DE EMAIL (GMAIL)
# ============================================
# IMPORTANTE: Para Gmail, debes generar una "Contraseña de Aplicación"
# 1. Ve a: https://myaccount.google.com/security
# 2. Activa la verificación en dos pasos
# 3. Ve a "Contraseñas de aplicaciones"
# 4. Genera una contraseña para "Correo" en "Otra (nombre personalizado)"
# 5. Usa esa contraseña aquí (sin espacios)

EMAIL_SENDER=tu_email@gmail.com
EMAIL_PASSWORD=tu_contraseña_de_aplicacion_aqui
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# ============================================
# CONFIGURACIÓN DE LA APLICACIÓN
# ============================================
FLASK_ENV=development
FLASK_DEBUG=True
CORS_ORIGINS=http://localhost:4200,http://127.0.0.1:4200
